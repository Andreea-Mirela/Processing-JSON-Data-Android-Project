<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitati.ListaCentreActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/stanciu_andreea_tv_centre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/custom_button"

        android:text="@string/centrele_sanitare_disponibile"
        android:fontFamily="casual"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

    <ListView
        android:id="@+id/stanciu_andreea_lv_centre"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/stanciu_andreea_tv_centre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stanciu_andreea_btn_adauga_centre"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        android:dividerHeight="10dp"
        />

    <Button
        android:id="@+id/stanciu_andreea_btn_adauga_centre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/custom_button"

        android:text="@string/adauga_centru_sanitar_provizoriu"
        android:fontFamily="casual"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>